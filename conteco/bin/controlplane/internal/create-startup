#!/usr/bin/env bash

mkdir "/conteco/pwd/${CONTECO_REPOSITORY_CATEGORY}"
cat /conteco/assets/start | envsubst '$CONTECO_ECOSYSTEM,$CONTECO_REALM,$CONTECO_REGISTRY,$CONTECO_REPOSITORY_CATEGORY,$CONTECO_STARTUP_MODE'	> "/conteco/pwd/${CONTECO_REPOSITORY_CATEGORY}/start"
cat /conteco/assets/start.bat | envsubst '$CONTECO_ECOSYSTEM,$CONTECO_REALM,$CONTECO_REGISTRY,$CONTECO_REPOSITORY_CATEGORY,$CONTECO_STARTUP_MODE'	> "/conteco/pwd/${CONTECO_REPOSITORY_CATEGORY}/start.bat"
chmod 777 "/conteco/pwd/${CONTECO_REPOSITORY_CATEGORY}/start"
chmod 777 "/conteco/pwd/${CONTECO_REPOSITORY_CATEGORY}/start.bat"

echo "created ${CONTECO_REPOSITORY_CATEGORY}/start"
echo "created ${CONTECO_REPOSITORY_CATEGORY}/start.bat"
